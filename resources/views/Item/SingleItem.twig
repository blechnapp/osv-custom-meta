{# Vererbe die Ceres-Originaldatei und überschreibe nur den Head-Block #}
{% extends '@Ceres/Item/SingleItem.twig' %}

{% block PartialHead %}
  {# Minimal eigener Head – Rest der Seite bleibt vom Original #}
  {% set itemData = item.documents[0].data %}

  <meta name="x-osvcustommeta" content="singleitem-head"/>

  {# PageMetadata mit eigenen Blöcken füllen #}
  {% embed getPartial('page-metadata') %}

    {% block title %}
      {{
        (itemData.variation.model
          | default(itemData.texts.metaTitle)
          | default(itemData.variation.name)
          | default(itemData.texts.name1)
        ) | striptags | trim
      }}
    {% endblock %}

    {% block description %}
      {{
        (itemData.variation.externalId
          | default(itemData.texts.metaDescription)
          | default(itemData.texts.shortDescription)
          | default(itemData.texts.description | striptags)
        ) | striptags | trim
      }}
    {% endblock %}

    {# falls du Keywords setzen willst: #}
    {# {% block keywords itemData.texts.keywords %} #}

  {% endembed %}
{% endblock %}
